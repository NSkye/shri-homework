.camera
  display grid
  grid-template-columns 1fr min-content
  grid-template-rows 320px 1fr 1fr
  column-gap 10px
  padding 10px
  border-radius 8px
  box-sizing border-box
  width 320px
  height 400px
  background #fafafa
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.3)
  &__window-wrapper
    overflow hidden
    grid-column span 2
  &__window
    width 100%
    height 320px
    background-size auto 320px
    touch-action none